<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Namiokai.Views.NoInternet"
             xmlns:props="clr-namespace:Namiokai"
             Title="{x:Static props:Resources.NoInternet_page}">
    <VerticalStackLayout  HorizontalOptions="Center"
                          VerticalOptions="Center"
                          Spacing="20">

        <Image Source="nointernet.png"
               HeightRequest="100" />

        <Label Text="{x:Static props:Resources.NoInternet}"
               FontAttributes="Bold"
               FontSize="Large" />

    </VerticalStackLayout>
</ContentPage>